<%= form_for @song  do |f| %>
  <% if !@artist.nil? %>
    <%= artist_id_field(@song) %>
  <% else %>
    <%= artist_select(@artist, @song) %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.submit %>
<% end %>
